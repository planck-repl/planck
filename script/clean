#!/usr/bin/env bash

if [ "${VERBOSE_BUILD:-0}" == "1" ]; then
  set -x
fi

if [ -z "$BUILD_PPA" ]; then
    rm -rf compiler
fi

cd planck-cljs
script/clean
cd ..

# GCL
rm -rf planck-cljs/lib/closure
rm -rf planck-cljs/lib/third_party
rm planck-cljs/src/planck/bundle/gcl.cljs
rmdir planck-cljs/src/planck/bundle

# CMake
rm -rf planck-c/build

if [ -z "$BUILD_PPA" ]; then
  rm -f planck-man/plk.1
fi

# Site
cd site
script/clean
cd ..
